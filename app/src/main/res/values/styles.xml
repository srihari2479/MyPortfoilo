<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (unchanged) -->
    <style name="Theme.CSMStudentApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/accent_teal</item>
        <item name="colorPrimaryDark">@color/accent_teal</item>
        <item name="colorAccent">@color/accent_teal</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_extrabold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- Custom ProgressBar Style -->
    <style name="CustomProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/accent_teal</item> <!-- Matches accent -->
        <item name="android:indeterminate">true</item>
    </style>
    <style name="HintTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/accent_teal</item>
        <item name="android:translationY">-10dp</item> <!-- Moves hint text further up -->
    </style>
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item> <!-- Adjust corner radius as needed -->
    </style>
    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Style for rounded corner post images -->
    <style name="roundedCornerImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <!-- Add this to your res/values/styles.xml file -->
    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!-- Style for post card text appearance -->
    <style name="PostCard.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="PostCard.Subtitle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>

    <style name="PostCard.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="lineHeight">24dp</item>
    </style>

    <style name="PostCard.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/accent_teal</item>
    </style>
    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>